<h1>Pages#welcome</h1>

<div id="app">
  {{ message }}
</div>

<div id="app-2">
  <span v-bind:title="message">
    Hover your mouse over me for a few seconds
    to see my dynamically bound title!
  </span>
</div>

<div id="app-3">
  <span v-if="seen">Now you see me</span>
</div>

<div id="app-4">
  <ol>
    <li v-for="todo in todos">
      {{ todo.text }}
    </li>
  </ol>
</div>

<div id="app-5">
  <p>{{ message }}</p>
  <button v-on:mouseover="reverseMessage">Reverse Message</button>
</div>

<div id="app-6">
  <p>{{ message }}</p>
  <input v-model="message">
</div>

<div id="app-ajhk">
  <br>
  <div>
    <input v-model="fullName"><br>
    <input v-model="nickName"><br>
    <input v-model="address1"><br>
    <input v-model="address2"><br>
    <input v-model="postalCode"><br>
  </div>

  <p>
    {{ fullName }}<span v-if="nickName !== ''"> ({{ nickName}})</span><br>
    {{ address1 }}<br>
    {{ address2 }}<br>
    {{ postalCode }}<br>
  </p>
</div>
